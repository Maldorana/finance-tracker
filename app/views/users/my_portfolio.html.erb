<h1>My portfolio</h1>

<div class='mt-5'>
  <h3 class="mb-3">Search Stocks</h3>
  <%= form_tag '#', method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9">
        <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3 no-left-padding">
        <%= button_tag type: :submit, class: "btn btn-primary" do %>
          <%= fa_icon 'search' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div> 